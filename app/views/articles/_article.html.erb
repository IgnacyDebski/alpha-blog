<% obj.each do |article| %>
  <h1> <%= article.title %> </h1>
  <h2> <%= article.description %> </h2>
  <h3> Created by: <%= article.user.username if article.user %>
  <%= time_ago_in_words(article.created_at)%> ago,
  last updated: <%= time_ago_in_words(article.updated_at) %> ago </h3>
  <hr>
  <% if logged_in? && current_user == article.user %>
  <div>
    <h1><%= link_to 'Edit', edit_article_path(article) %></h1>
    <h1><%= link_to 'Show', article_path(article)%></h1>
    <h1><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></h1>
  </div>
  <% end %>
<% end %>

<p>
<%= link_to "Create new article", new_article_path %>
</p>

